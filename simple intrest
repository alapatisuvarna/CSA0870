def si(p, t, customer_type):
    if customer_type.lower() == 'y':
        r = 12.0
    else:
        r = 10.0
    return p * t * r / 100
p = 10000
t = 1
customer_type = 'y'
print("Simple interest is {:.3f}".format(si(p, t, customer_type)))
without function:
p = 10000
t = 1
customer_type = 'y'
if customer_type.lower() == 'y':
    r = 12.0
else:
    r = 10.0
simple_interest = p * t * r / 100
print("Simple interest is {:.3f}".format(simple_interest))

